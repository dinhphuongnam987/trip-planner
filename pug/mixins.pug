mixin tourItem(image, price, title, review, reviewCount, duration, tourPrice)
  .tour
    .tour-top
      img.tour-image(src= image, alt='this-is-image')
      span.tour-price From #{price}
    .tour-content
      h3.tour-title= title
      .tour-rating
        .tour-review
          .tour-star
            img(src='./images/star.png', alt='')
          .tour-review-count
            span #{review} (#{reviewCount} reviews)
        .tour-duration Duration: #{duration}
      a.tour-button(href='https://google.com', target='_blank', rel='noopener noreferrer') Tours Price $#{tourPrice}